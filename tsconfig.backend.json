{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true, // https://stackoverflow.com/a/62099904/2766908
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist-backend",
    "rootDir": "./src",
    "paths": {
      "src/*": ["./src/*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
